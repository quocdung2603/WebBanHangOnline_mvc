@model WebBanHangOnline.Models.EF.Voucher
@{
    ViewBag.Title = "Chi tiết Voucher";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader {
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Trang Chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/news" class="nav-link">Mã Khuyến Mãi</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Thêm Mới</a>
        </li>
    </ul>
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>QUẢN LÝ VOUCHER</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông Tin Chi Tiết Mã Giảm Giá</h3>


        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                @using (Html.BeginForm("Detail", "Voucher"))
                {   
                <div id="logins-part" class="content active dstepper-block" role="tabpanel" aria-labelledby="logins-part-trigger">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Tiêu Đề</label>
                        @Html.TextBoxFor(x => x.Title, new { @class = "form-control", @value = Model.Title, @readonly = "readonly" })
                    </div>
                    <div class="form-group">
                        <label>Loại Voucher</label>
                        @if (Model.Type == 1)
                        {
                            <input type="text" class="form-control" style="background-color:#e9ecef;" id="Type" name="Type" value="Giảm Giá Trên Tổng Hóa Đơn" />
                        }
                        else
                        {
                            <input type="text" class="form-control" style="background-color:#e9ecef;" id="Type" name="Type" value="Giảm Chi Phí Vận Chuyển" />
                        }
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Giá Trị</label>
                        @Html.TextBoxFor(x => x.Value, new { @class = "form-control", @value = Model.Title, @readonly = "readonly" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Phần Trăm Giá Trị</label>
                        @Html.TextBoxFor(x => x.PercentValue, new { @class = "form-control", @value = Model.PercentValue, @readonly = "readonly" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Số Lượng</label>
                        @Html.TextBoxFor(x => x.Quantity, new { @class = "form-control", @value = Model.Quantity, @readonly = "readonly" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Thời Gian Bắt Đầu</label>
                        @Html.TextBoxFor(x => x.StartDate, new { @class = "form-control", @value = Model.StartDate.ToString("dd/MM/yyyy hh:mm:ss"), @readonly = "readonly" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Thời Gian Kết Thúc</label>
                        @Html.TextBoxFor(x => x.EndDate, new { @class = "form-control", @value = Model.EndDate.ToString("dd/MM/yyyy hh:mm:ss"), @readonly = "readonly" })
                    </div>
                    <div class="form-group">
                        @* <button type="submit" class="btn btn-primary">Lưu</button>*@
                        <a href="/admin/voucher" class="btn btn-danger">Quay lại</a>
                    </div>
                </div>
                }
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
