@model WebBanHangOnline.Models.EF.ExportProduct
@{
    ViewBag.Title = "Chi Tiết Phiếu Xuất";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var i = 0;
}

<link rel="stylesheet" href="~/Content/assets/styles/CreateExam.css" />
@section naviheader {
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Trang Chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/category" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản Lý Xuất Hàng</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<div class="page-wrapper">
    <div class="container-fluid">
        @*Xây dựng nội dung ở đây*@

        <div class="ContainerCreateExam">
            <form action="/admin/ExportProduct/add" method="post">
                <div class="form-horizontal">
                    <h4>Phiếu Xuất Hàng</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label class="control-label col-md-2">Tên Đợt Xuất Hàng</label>
                        <div class="col-md-10">
                            <input type="text" name="TenDotNhapHang" class="NameKyThi" value="@Model.Title"  readonly/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Ghi Chú</label>
                        <div class="col-md-10">
                            <textarea type="text" name="GhiChu" class="NameKyThi" value="@Model.Note" readonly></textarea>
                        </div>
                    </div>

                    @*Thông tin phiếu nhập*@
                    <table class="table table-bordered table-hover">
                        <thead style="background-color:aquamarine">
                            <tr class="text-center">
                                <th>Mã Sản Phẩm</th>
                                <th>Tên Sản Phẩm</th>
                                <th>Màu Sắc</th>
                                <th>Kích Thước</th>
                                <th>Số Lượng</th>
                            </tr>
                        </thead>
                        <tbody id="Exams">
                            @foreach (var item in Model.ExportProductDetails)
                            {
                                <tr class="text-center" id="Exam">
                                    <td>
                                        <div class="form-group">
                                            <div class="col-md-10" style="background-color: white;">
                                                <input class="form-control" value="@item.ProductId" readonly />
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-group">
                                            <div class="col-md-10" style="background-color: white;">
                                                <input list="Titles" id="Title" class="form-control" value="@item.Title" readonly>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-group">
                                            <div class="col-md-10" style="background-color: white;">
                                                <input class="form-control" value="@item.Color" readonly />
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-group">
                                            <div class="col-md-10" style="background-color: white;">
                                                <input class="form-control" value="@item.Size" readonly />
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-group">
                                            <div class="col-md-10" style="background-color: white;">
                                                <input class="form-control" value="@item.Quantity" readonly />
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </form>
        </div>
        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>

    </div>
</div>



