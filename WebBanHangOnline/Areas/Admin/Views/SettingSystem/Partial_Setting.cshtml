@using WebBanHangOnline.Models.Commons
@using (Ajax.BeginForm("AddSetting", "SettingSystem", new AjaxOptions
{
    OnBegin = "OnBegin",
    OnSuccess = "OnSuccess",
    OnFailure = "OnFailure"
}))
{
    <script>
        function OnBegin() {
            $('#load_page').html('Đang lưu...');
        }
        function OnSuccess(rs) {
            $('#load_page').html('');
        }
        function OnFailure(rs) {

        }
        
    </script>
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="col-md-12">
        <div class="card">
            <div class="card-header p-2">
                <ul class="nav nav-pills">
                    <li class="nav-item"><a class="nav-link active" href="#activity" data-toggle="tab">Thông Tin Chung</a></li>
                    @*<li class="nav-item"><a class="nav-link" href="#timeline" data-toggle="tab">Timeline</a></li>*@
                    <li class="nav-item"><a class="nav-link" href="#settingSeo" data-toggle="tab">SEO</a></li>
                </ul>
            </div><!-- /.card-header -->
            <div class="card-body">
                <div class="tab-content">
                    <div class="active tab-pane" id="activity">
                        <div class="form-group">
                            <label>Tiêu Đề Trang</label>
                            <input type="text" name="SettingTitle" class="form-control" value="@SettingHelper.GetValue("SettingTitle")" />
                        </div>
                        <div class="form-group">
                            <label>Logo</label>
                            <div class="input-group">
                                <div class="custom-file">
                                    <input type="text" name="SettingLogo" id="txtSettingLogo" class="form-control" value="@SettingHelper.GetValue("SettingLogo")"/>
                                </div>
                                <div class="input-group-append">
                                    <input type="button" value="Tải Ảnh" onclick="BrowseServer('txtSettingLogo');" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Hotline</label>
                            <input type="text" name="SettingHotline" class="form-control" value="@SettingHelper.GetValue("SettingHotline")"/>
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input type="text" name="SettingEmail" class="form-control" value="@SettingHelper.GetValue("SettingEmail")" />
                        </div>
                    </div>

                    <div class="tab-pane" id="settingSeo">
                        <div class="form-group">
                            <label>Seo Title</label>
                            <input type="text" name="SettingTitleSeo" class="form-control" value="@SettingHelper.GetValue("SettingTitleSeo")"/>
                        </div>
                        <div class="form-group">
                            <label>Seo Description</label>
                            <textarea name="SettingDesSeo" class="form-control" rows="3">@SettingHelper.GetValue("SettingDesSeo")</textarea>
                        </div>
                        <div class="form-group">
                            <label>Seo Keyword</label>
                            <textarea name="SettingKeySeo" class="form-control" rows="3">@SettingHelper.GetValue("SettingKeySeo")</textarea>
                        </div>
                    </div>
                    <!-- /.tab-pane -->
                </div>
                <!-- /.tab-content -->
            </div><!-- /.card-body -->
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Lưu</button>
        </div>
        <!-- /.card -->
    </div>
}

