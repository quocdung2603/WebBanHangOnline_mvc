@using WebBanHangOnline.Models;
@using WebBanHangOnline.Models.EF
@model IEnumerable<Message>
@{
    ViewBag.Title = "Trang chủ admin";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ApplicationDbContext db = new ApplicationDbContext();
    
}

<link href="~/Content/assets/styles/chat.css" rel="stylesheet" />
<link rel="stylesheet" href="~/css/Chat.css" />
<!-- Content Header (Page header) -->
@section naviheader {
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home/index" class="nav-link">Trang Chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home/index" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12" style="display:flex; flex-direction:row; justify-content:center;">
                <h1 style="font-weight:bold;">TRANG CHỦ</h1>
            </div>
            <div class="col-sm-12">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/home/index">Trang chủ</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3 col-6">
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>@ViewBag.A</h3>
                        <p>Số Đơn Hàng</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-bag"></i>
                    </div>
                    <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>@ViewBag.B<sup style="font-size: 20px">%</sup></h3>

                        <p>Tỷ Lệ Đơn Hàng Thành Công</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-stats-bars"></i>
                    </div>
                    <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>@ViewBag.C</h3>

                        <p>Khách Hàng Thành Viên</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-person-add"></i>
                    </div>
                    <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>65</h3>

                        <p>Lượt Ghé Thăm</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-pie-graph"></i>
                    </div>
                    <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
        </div>
    </div>
    <!-- /.card -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Hộp Thoại</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body" style="display: block;">
            <section style="background-color: #f4f6f9;">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card" id="chat3" style="border-radius: 15px; max-height: 1000px; overflow: auto">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6 col-lg-5 col-xl-4 mb-4 mb-md-0">
                                            <div class="">
                                                <div class="input-group rounded mb-3">
                                                    <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search"
                                                           aria-describedby="search-addon" />
                                                    <span class="input-group-text border-0" id="search-addon">
                                                        <i class="fas fa-search"></i>
                                                    </span>
                                                </div>

                                                <div data-mdb-perfect-scrollbar="true" style="position: relative; height: 400px">
                                                    @Html.Action("ListRoom", "Chat")
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-md-6 col-lg-7 col-xl-8">
                                            <div class="pt-3 pe-3" data-mdb-perfect-scrollbar="true"
                                                 style="position: relative; height: 400px; overflow: auto" id="body-message">

                                                @if (Model != null)
                                                {
                                                    foreach (var item in Model)
                                                    {
                                                        if (item.UserId != ViewBag.UserId)
                                                        {
                                                            <div class="d-flex flex-row justify-content-start">
                                                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava6-bg.webp"
                                                                     alt="avatar 1" style="width: 45px; height: 100%;">
                                                                <div>
                                                                    <p class="small p-2 ms-3 mb-1 rounded-3" style="background-color: #f5f6f7; border-radius:10px;">
                                                                        @item.Content
                                                                    </p>
                                                                    <p class="small ms-3 mb-3 rounded-3 text-muted float-end">@item.TimesChat</p>
                                                                </div>
                                                            </div>
                                                        }
                                                        else
                                                        {
                                                            <div class="d-flex flex-row justify-content-end">
                                                                <div>
                                                                    <p class="small p-2 me-3 mb-1 text-white rounded-3 bg-primary" style="border-radius:10px;">
                                                                        @item.Content
                                                                    </p>
                                                                    <p class="small me-3 mb-3 rounded-3 text-muted">@item.TimesChat</p>
                                                                </div>
                                                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava1-bg.webp"
                                                                     alt="avatar 1" style="width: 45px; height: 100%;">
                                                            </div>
                                                        }

                                                    }
                                                }

                                            </div>

                                            <div class="text-muted d-flex justify-content-start align-items-center pe-3 pt-3 mt-2">
                                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava6-bg.webp"
                                                     alt="avatar 3" style="width: 40px; height: 100%;">
                                                <input type="text" class="form-control form-control-lg" id="txtMessage" placeholder="Type message">
                                                <button style="background-color: #007bff; border-color: #007bff; border-radius:50%;" class="ms-3" id="btnSend"><i class="fas fa-paper-plane" style="padding:15px 10px;"></i></button>
                                            </div>
                                            <hr />
                                        </div>
                                    </div>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>

</section>
<!-- /.content -->

@section scripts{
    <script src="~/Scripts/jquery.signalR-2.4.3.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <script>
        var name = '@ViewBag.Name';
        var idRoom = '@ViewBag.IdRoom';
        var UserId = '@ViewBag.UserId';
        $(function () {
            var chat = $.connection.Chat;
            console.log(chat);
            loadClient(chat);
            $.connection.hub.start().done(function () {
                chat.server.connect(name);
                chat.server.joinRoom(idRoom);
                $('#btnSend').click(function () {
                    var mess = $('#txtMessage').val();
                    chat.server.message(name, mess, idRoom, UserId);
                    $('#txtMessage').val('').focus('');
                });
            });
        })

        function loadClient(chat) {
            // sửa lại cái phần này làm sao để nhận dc cái id của người dùng để còn hiện cho đúng bên
            chat.client.message = function (name, msg,id,UserId) {
                var currentDate = new Date();  // Tạo đối tượng Date
                var formattedDate = currentDate.toLocaleDateString();
                if ('@ViewBag.UserId' == UserId) {
                    var ms = ` <div class="d-flex flex-row justify-content-start">
                                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava6-bg.webp" alt="avatar 1" style="width: 45px; height: 100%;">
                                    <div>
                                        <p class="small p-2 ms-3 mb-1 rounded-3" style="background-color: #f5f6f7;">
                                            `+ msg + `
                                        </p>
                                        <p class="small ms-3 mb-3 rounded-3 text-muted float-end">`+ formattedDate + `</p>
                                    </div>
                                </div>`;
                    console.log(ms);
                    $("#body-message").append(ms);
                }
                else {
                    var ms = ` <div class="d-flex flex-row justify-content-end">
                                    <div>
                                        <p class="small p-2 ms-3 mb-1 rounded-3 bg-primary" style="border-radius:10px;">
                                            `+ msg + `
                                        </p>
                                        <p class="small ms-3 mb-3 rounded-3 text-muted float-end">`+ formattedDate + `</p>
                                    </div>
                                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava6-bg.webp" alt="avatar 1" style="width: 45px; height: 100%;">
                                </div>`;
                    console.log(ms);
                    $("#body-message").append(ms);
                }
            };
        }
    </script>
}

