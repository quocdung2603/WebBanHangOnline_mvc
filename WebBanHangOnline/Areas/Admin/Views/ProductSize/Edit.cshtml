@model WebBanHangOnline.Models.EF.ProductSize
@{
    ViewBag.Title = "Chỉnh Sửa Size";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutEmpty.cshtml";
}
<h2>Chỉnh Sửa Kích Thước Sản Phẩm</h2>
<!-- Main content -->

<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@ViewBag.Title</h3>

        </div>
        <div class="card-body">
            @using (Html.BeginForm("Edit", "ProductSize", FormMethod.Post))
            {
                @Html.ValidationSummary(true)
                @Html.AntiForgeryToken()
                @Html.HiddenFor(x => x.Id)
                @Html.HiddenFor(x => x.ProductId)
                <div class="form-group">
                    <label>Color</label>
                    @Html.TextBoxFor(x => x.ColorName, new { @class = "form-control", @readonly = "readonly" })
                    @Html.ValidationMessageFor(x => x.ColorName, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Size</label>
                    @Html.TextBoxFor(x => x.SizeName, new { @class = "form-control", @readonly = "readonly" })
                    @Html.ValidationMessageFor(x => x.SizeName, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Số Lượng</label>
                    <input type="text" name="Quantity" value="@Model.Quantity" class="form-control">
                    @Html.HiddenFor(x => x.Quantity, new { @class = "", @placeholder = "Số Lượng" })
                    @Html.ValidationMessageFor(x => x.Quantity, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Lưu Lại</button>
                </div>
            }
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
