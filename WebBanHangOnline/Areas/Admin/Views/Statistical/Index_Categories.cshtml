                        console.log(arrDoanhThu);
                    });
                    //-------------
                    //- DONUT CHART -
                    //-------------
                    // Get context with jQuery - using jQuery's .get() method.
                    var donutChartCanvas1 = $('#donutChart1').get(0).getContext('2d')
                    var donutData1 = {
                        labels: [
                            'MAN',
                            'WOMEN',
                            'ACCESSORIES',
                        ],
                        datasets: [
                            {
                                data: arrLoiNhuan,
                                backgroundColor: ['#f56954', '#00a65a', '#f39c12'],
                            }
                        ]
                    }
                    var donutOptions = {
