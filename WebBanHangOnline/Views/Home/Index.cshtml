<!-- Blogs -->
@Html.Action("Partial_News_Home", "News")

<style>
    #openChatButton {
        position: fixed;
        bottom: 20px;
        right: 20px;
        z-index: 999;
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 10px 15px;
        border-radius: 50%;
        cursor: pointer;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }
</style>

@if (User.Identity.IsAuthenticated)
{
    <button id="openChatButton">
        <i class="fa fa-comments" aria-hidden="true"></i>
    </button>
}

<div id="dialog">
    <iframe id="myIframe" style="border:0; width:100%; height:100%;"></iframe>
</div>

@section scripts{
    <script src="~/Content/assets/plugins/jquery/jquery.min.js"></script>
    <script src="~/Content/assets/dist/js/adminlte.min.js"></script>
    <script src="~/Content/assets/dist/js/demo.js"></script>
    <script src="~/Content/assets/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>

    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
    <script>
        $(document).ready(function () {
            $("#dialog").dialog({
                autoOpen: false,
                show: "fade",
                hide: "fade",
                modal: true,
                height: '440',
                width: '450',
                resizable: true,
                title: 'Messages',
                close: function () {
                    //window.location.reload();
                }
            });
            $('body').on("click", "#openChatButton", function () {
                $("#dialog #myIframe").attr("src", "/Home/ShowChat");
                $('#dialog').dialog('open');
                return false;
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            $.ajax({
                url: '/admin/TimePromotion/ApplyPromotion', 
                type: 'GET',
                success: function (rs) {
                    if (rs.success) {
                        location.reload();
                    }
                },
            });
        });
    </script>
}