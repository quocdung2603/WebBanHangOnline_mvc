@model WebBanHangOnline.Models.EF.Subscribe
<div class="newsletter">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="newsletter_text d-flex flex-column justify-content-center align-items-lg-start align-items-md-center text-center">
                    <h4>Đăng Ký Nhận Thông Báo</h4>
                    <p>Gửi mail đăng kí để nhận những thông báo của chúng tôi về các chương trình khuyến mãi,v.v..Nhận ưu đãi 20% cho hóa đơn đầu tiên sau đăng ký.</p>
                </div>
            </div>
            <div class="col-lg-6">
                @using (Ajax.BeginForm("Subcribe", "Home", new AjaxOptions
                {
                    OnBegin = "OnBeginSub",
                    OnSuccess = "OnSuccessSub",
                    OnFailure = "OnFailureSub"
                }))
                {
                    @Html.AntiForgeryToken()
                    <script>
                        function OnBeginSub() {

                        }
                        function OnSuccessSub(rs) {
                            if (rs.success) {
                                alert("Đăng Ký Nhận Thông Báo Qua Email Thành Công <3");
                            }
                        }
                        function OnFailureSub(rs) {

                        }
                    </script>
                    <div class="newsletter_form d-flex flex-md-row flex-column flex-xs-column align-items-center justify-content-lg-end justify-content-center">
                        @*@Html.TextBoxFor(x=>x.Email, new {@placeholder = "Nhập email để đăng kí nhận tin", @type = "email" , @required = "required"})*@
                        <input id="newsletter_email" name="Email" type="email" placeholder="Nhập email của bạn" required="required" data-error="Email không đúng định dạng">
                        <button id="newsletter_submit" type="submit" class="newsletter_submit_btn trans_300" value="Submit">Đăng Ký</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
