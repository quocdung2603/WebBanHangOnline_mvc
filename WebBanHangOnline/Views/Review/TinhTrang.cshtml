@model IEnumerable<WebBanHangOnline.Models.EF.Order>
@if (Model != null)
{
    var i = 1;
    var s = decimal.Zero;
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>STT</th>
                <th>Mã DH</th>
                <th>Ngày Mua</th>
                <th>Tổng Hóa Đơn</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@i</td>
                    <td>@item.Code</td>
                    <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                    <td>@WebBanHangOnline.Common.Common.FormatNumber(item.TotalAmount, 0)đ</td>
                    @if (item.OrderStatus == 0)
                    {
                        <td>
                            <button id="btnHuy" class="btn btn-sm btn-danger btnChange" data-id="@item.Id">Hủy đơn hàng</button>
                        </td>
                    }
                    else if (item.OrderStatus == 0)
                    {
                        <td>
                            <button id="btnTraHang" class="btn btn-sm btn-danger btnChange" data-id="@item.Id">Trả Hàng</button>
                        </td>
                    }
                </tr>
                i++;
                s += item.TotalAmount;
            }
        </tbody>
    </table>
    ViewBag.Cnt = i;
    ViewBag.TtBuy = s;
}
