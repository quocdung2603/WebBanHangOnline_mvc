
@{
    ViewBag.Title = "Giỏ Hàng";
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/categories_styles.css">
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/categories_responsive.css">
<link rel="stylesheet" href="//code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
<div class="container product_section_container">
    <div class="row">
        <div class="col product_section clearfix">

            <!-- Breadcrumbs -->

            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a href="index.html">Home</a></li>
                    <li class="active"><a href="/"><i class="fa fa-angle-right" aria-hidden="true"></i>Giỏ Hàng</a></li>
                </ul>
            </div>

            <!-- Sidebar -->
            <!-- Main Content -->

            <div class="row">
                <div class="col-md-12" id="load_data">
                    @Html.Action("Partial_Item_Cart", "ShoppingCart")
                </div>
                <div class="col-md-12">
                    @if (ViewBag.CheckCart != null)
                    {
                        <div class="text-right">
                            <a href="#" class="btn btn-sm btn-danger btnDeleteAll">Xóa Hết</a>
                            <a href="#" class="btn btn-sm btn-primary btnUseVoucher">Áp dụng Voucher</a>
                            <a href="/thanh-toan" class="btn btn-sm btn-success">Thanh Toán</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<div id="dialog">
    <iframe id="myIframe" style="border:0; width:100%; height:100%;"></iframe>
</div>
@section scripts{
    <script src="~/Content/assets/js/categories_custom.js"></script>
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
    <script>
        $(document).ready(function () {
            $("#dialog").dialog({
                autoOpen: false,
                show: "fade",
                hide: "fade",
                modal: true,
                height: '700',
                width: '850',
                resizable: true,
                title: 'Ví Voucher của bạn.',
                close: function () {
                    window.location.reload();
                }
            });
            $('body').on("click", ".btnUseVoucher", function () {
                $("#dialog #myIframe").attr("src", "/Voucher/Index");
                $('#dialog').dialog('open');
                return false;
            });
        });
      
    </script>  
}

